{
    "name": "gogoanime-modernized/website",
    "description": "Modernized version of the GogoAnime streaming website.",
    "type": "project",
    "license": "proprietary",
    "require": {
        "php": ">=8.0",
        "twig/twig": "^3.21"
    },
    "authors": [
        {
            "name": "AI Modernization Agent",
            "email": "ai@example.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "config": {
        "platform": {
            "php": "8.0"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-update-cmd": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ]
    }
}
