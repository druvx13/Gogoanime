<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <link rel="shortcut icon" href="{{ BASE_URL }}/img/favicon.ico">

    <title>List Anime Popular at {{ WEBSITE_NAME }}</title>

    <meta name="robots" content="index, follow" />
    <meta name="description" content="List Anime Popular at {{ WEBSITE_NAME }}">
    <meta name="keywords" content="List Popular, Anime Popular">
    <meta itemprop="image" content="{{ BASE_URL }}/img/logo.png" />

    <meta property="og:site_name" content="{{ WEBSITE_NAME }}" />
    <meta property="og:locale" content="en_US" />
    <meta property="og:type" content="website" />
    <meta property="og:title" content="List Anime Popular at {{ WEBSITE_NAME }}" />
    <meta property="og:description" content="List Anime Popular at {{ WEBSITE_NAME }}">
    <meta property="og:url" content="" /> {# Or pass current URL #}
    <meta property="og:image" content="{{ BASE_URL }}/img/logo.png" />
    <meta property="og:image:secure_url" content="{{ BASE_URL }}/img/logo.png" />

    <meta property="twitter:card" content="summary" />
    <meta property="twitter:title" content="List Anime Popular at {{ WEBSITE_NAME }}" />
    <meta property="twitter:description" content="List Anime Popular at {{ WEBSITE_NAME }}" />
    <meta name="referrer" content="origin">

    <link rel="canonical" href="{{ BASE_URL }}{{ request_uri }}" />
    <link rel="alternate" hreflang="en-us" href="{{ BASE_URL }}{{ request_uri }}" />
    <link rel="stylesheet" type="text/css" href="{{ BASE_URL }}/css/style.css" />
    {% include 'parts/popup.html.twig' %}
    <script type="text/javascript" src="{{ BASE_URL }}/js/libraries/jquery.js"></script>
    <script>
        var base_url = 'https://' + document.domain + '/'; // Or use {{ BASE_URL }}
        var base_url_cdn_api = 'https://ajax.gogocdn.net/';
        var api_anclytic = 'https://ajax.gogocdn.net/anclytic-ajax.html';
    </script>
    <script type="text/javascript" src="https://cdn.gogocdn.net/files/gogo/js/main.js"></script>
</head>

<body>
    <div class="clr"></div>
    <div id="wrapper_inside">
        <div id="wrapper">
            <div id="wrapper_bg">
                {% include 'layout/header.html.twig' %}
                <section class="content">
                    <section class="content_left">
                        <div class="main_body">
                            <div class="anime_name anime_movies"> {# Assuming class 'anime_movies' is okay for popular too, or create a new one #}
                                <i class="icongec-anime_movies i_pos"></i> {# Change icon if needed #}
                                <h2>ANIME POPULAR</h2>
                                <div class="anime_name_pagination">
                                    <div class="pagination">
                                        {{ pagination_html|raw }}
                                    </div>
                                </div>
                            </div>

                            <div class="last_episodes">
                                <ul class="items">
                                    {% for popular_item in popular_anime_items %}
                                    <li>
                                        <div class="img">
                                            <a href="/category/{{ popular_item.animeId }}" title="{{ popular_item.animeTitle|escape('html_attr') }}">
                                                <img src="{{ popular_item.imgUrl }}" alt="{{ popular_item.animeTitle|escape('html_attr') }}" />
                                            </a>
                                        </div>
                                        <p class="name"><a href="/category/{{ popular_item.animeId }}" title="{{ popular_item.animeTitle|escape('html_attr') }}">{{ popular_item.animeTitle }}</a></p>
                                        <p class="released">{{ popular_item.status }}</p> {# Or other relevant info like release year #}
                                    </li>
                                    {% else %}
                                    <li>No popular anime found for this page.</li>
                                    {% endfor %}
                                </ul>
                            </div>
                        </div>
                    </section>
                    <section class="content_right">
                        <div class="headnav_center"></div>
                        <div class="clr"></div>
                        <div class="main_body">
                            <div class="main_body_black">
                                <div class="anime_name ongoing">
                                    <i class="icongec-ongoing i_pos"></i>
                                    <h2>RECENT RELEASE</h2>
                                </div>
                                <div class="recent">
                                    <div id="scrollbar2">
                                        <div class="scrollbar"><div class="track"><div class="thumb"><div class="end"></div></div></div></div>
                                        <div class="viewport">
                                            <div class="overview">
                                                {{ recent_release_content|raw }}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="clr"></div>
                        <div id="load_ads_2">
                            <div id="media.net sticky ad" style="display: inline-block"></div>
                        </div>
                        <style type="text/css">
                            /* Styles for sticky ad and scrollbar, consider moving to a global CSS file */
                            #load_ads_2 { width: 300px; }
                            #load_ads_2.sticky { position: fixed; top: 0; }
                            #scrollbar2 .viewport { height: 1000px !important; }
                        </style>
                        <script>
                            // JS for sticky ad - consider moving to a global JS file
                            var leftamt;
                            function scrollFunction() {
                                var scamt = (document.documentElement.scrollTop ? document.documentElement.scrollTop : document.body.scrollTop);
                                var element = document.getElementById("media.net sticky ad");
                                if (element && typeof leftamt !== 'undefined' && scamt > leftamt) {
                                    var leftPosition = element.getBoundingClientRect().left;
                                    element.className = element.className.replace(/(?:^|\s)fixclass(?!\S)/g, '');
                                    element.className += " fixclass";
                                    element.style.left = leftPosition + 'px';
                                } else if (element) {
                                    element.className = element.className.replace(/(?:^|\s)fixclass(?!\S)/g, '');
                                }
                            }
                            function getElementTopLeft(id) {
                                var ele = document.getElementById(id);
                                if (!ele) return {top: 0, left: 0};
                                var top = 0;
                                var left = 0;
                                while (ele.tagName != "BODY") {
                                    top += ele.offsetTop;
                                    left += ele.offsetLeft;
                                    ele = ele.offsetParent;
                                    if (!ele) break;
                                }
                                return { top: top, left: left };
                            }
                            function abcd() {
                                 var adElement = document.getElementById("media.net sticky ad");
                                if (adElement) {
                                    TopLeft = getElementTopLeft("media.net sticky ad");
                                    leftamt = TopLeft.top;
                                }
                            }
                            window.onload = abcd;
                            window.onscroll = scrollFunction;
                        </script>
                        {% include 'parts/sub-category.html.twig' %}
                    </section>
                </section>
                <div class="clr"></div>
                {% include 'layout/footer.html.twig' %}
            </div>
        </div>
    </div>
    <div id="off_light"></div>
    <div class="clr"></div>
    <div class="mask"></div>
    <script type="text/javascript" src="{{ BASE_URL }}/js/files/combo.js"></script>
    <script type="text/javascript" src="{{ BASE_URL }}/js/files/video.js"></script> {# Assuming this is needed #}
    <script type="text/javascript" src="{{ BASE_URL }}/js/files/jquery.tinyscrollbar.min.js"></script>
    <script>
        if (document.getElementById('scrollbar2')) {
            $('#scrollbar2').tinyscrollbar();
        }
    </script>
</body>
</html>
